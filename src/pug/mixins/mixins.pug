mixin menu(className, items)
    each item in items
        a(class=className)= item


mixin smoothBlocks(className, items)
    div(class=className)
        each item in items
            div(class=`${className}_block`)
                div(class=`${className}_block_wrapper`)
                    img(class=`${className}_pic` src=item)


mixin bouquets(className, items)
    div(class=`${className}__acco`)
        button(class=`${className}__button ${className}__button_left` id='button_left')
            div(class=`${className}__button_segment ${className}__button_segment_left`)
        div(class=`${className}__acco_window`)
            div(class=`${className}__acco_line` id='line')
                each item in items
                    div(class=`${className}__acco_item`)
                        picture(class=`${className}__acco_pic_wrapper`)
                            source(srcset=item.picture media="(min-width: 769px) and (min-height: 769px)")
                            img(class=`${className}__acco_pic` srcset=item.pictureMobile)
                        div(class=`${className}__info`)
                            div(class=`${className}__info_price`)= `${item.price} руб.`
                            div(class=`${className}__info_text`)
                                div(class=`${className}__info_name`)= item.name
                                div(class=`${className}__info_descr`)= item.descr
        button(class=`${className}__button ${className}__button_right` id='button_right')
            div(class=`${className}__button_segment`)


mixin contacts(className, items)
    div(class=className)
        ul
            each item in items
                li(class=`${className}__item`)
                    img(class=`${className}__pic` src=item.srcPic, alt="social pic")
                    a(class=`${className}__link` href=item.href target="_blank")= item.name