include ../mixins/mixins.pug

doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title One-page-scroll
  body
    .wrapper
      .indicator
      .gmb-button(type="button")
        .gmb-button__section
      .gmb-menu-hide
      .gmb-menu
        .gmb-button_close(type="button")
        nav.navigation_gmb
          +menu("link_gmb", menuItems)
      section.section.section__about
        header.header
          nav.navigation
            +menu("link", menuItems)
        h1 Green Pink Store
        h2 Сайт находится в разработке
      section.section.section__last-orders
        h2 Последние работы
        +smoothBlocks('last-orders', 'last-orders_block', 'last-orders_block_wrapper', 'last-orders_pic', instaLinks)
      section.section.section__bouquets
        h2.subtitle Букеты
        .bouquets__acco
          button.bouquets__button.bouquets__button_left#button_left
            .bouquets__button_segment.bouquets__button_segment_left
          .bouquets__acco_window
            .bouquets__acco_line#line
              +bouquets("bouquets__acco_item", "bouquets__acco_pic", instaBouquets)
          button.bouquets__button.bouquets__button_right#button_right
            .bouquets__button_segment
        .bouquets__info
          .bouquets__info_price 1990 руб.
          .bouquets__info_text
            .bouquets__info_name Букет Привет
            .bouquets__info_descr Lorem ipsum dolor sit amet consectetur adipisicing elit. At, qui quam? Praesentium dolorem temporibus exercitationem veniam libero nemo perspiciatis incidunt dolorum ut, itaque earum possimus, vel minima, iusto molestias velit.
      section.section.section__contacts
        .contacts
          .contacts__phone
            .contacts__phone_pic
            a.contacts__link(href="tel:+79221307256") +7 922 130 72 56
          ul.contacts__socials
            li.contacts__socials_item
              a.contacts__link(href="https://instagram.com/greenpink_ekb?igshid=mtyqdn94rgfy" target="_blank") Instagram
            li.contacts__socials_item
        footer.footer
          nav.navigation
            +menu("link_footer", menuItems)
